.card {
	display: flex;
	flex-direction: row;
	background-color: white;
	border-radius: 25rpx;
	padding: 30rpx;
	box-shadow: 5rpx 5rpx 5rpx 5rpx gray;
}

van-image {
	padding: 0;
	margin-right: 50rpx;
}

.book {
	flex: 1;
	display: flex;
	flex-direction: column;
	justify-content: space-around;
}

.info {
	height: 50%;
	display: flex;
	flex-direction: column;
	justify-content: space-around;
}

.title {
	font-size: 45rpx;
	font-weight: bold;
}

.author {
	font-size: 30rpx;
	font-weight: normal;
}

van-tag {
	margin: 5rpx;
}

.douban {
	margin: 15rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	background-color: #f7f7f7;
	border-radius: 15rpx;
	box-shadow: 3rpx 3rpx 3rpx 3rpx gray;
	font-size: 30rpx;
	font-weight: normal;
}

.score {
	font-size: 60rpx;
	font-weight: bold;
}
