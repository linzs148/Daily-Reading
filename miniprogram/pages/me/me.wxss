/**index.wxss**/
/* @import "../skin/dark.wxss"; */
.container{
	height:120vh;
	display: flex;
}
.usermotto{
	text-align: center;
	height:130rpx;
	padding-top: 50rpx;
}
.userinfo {
	display: flex;
	flex-direction: column;
	align-items: center;
	color: #aaa;
}
.switch{
	width: 100rpx;
  height:80rpx;
	margin:15rpx;
	position: absolute;
	right: 0px;
  padding: 0px;
}
.editionText{
	width: 50rpx;
	height:50rpx;
	line-height: 0rpx;
	margin:40rpx;
	position: absolute;
	right: 0px;
  padding: 5px;
}
.navigation{
  width: 50rpx;
  height:50rpx;
	margin:20rpx;
	position: absolute;
	right: 0px;
  padding: 5px;
}
.mini_image{
  width: 60rpx;
  height:60rpx;
  margin:25rpx;
}
.options{
	width:100%;
	border-bottom: 1rpx solid #727070;
}
.optionBar{
  display:flex;
  border-top: 1rpx solid #727070;
  flex-direction: row;
	width: 100%;
	height:113rpx;
  margin:2rpx;
}
.b1{
	height:110rpx;
	line-height: 0rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  text-align: left;
}

.userinfo-avatar {
	overflow: hidden;
	width: 228rpx;
	height: 228rpx;
	margin: 0rpx;
	border-radius: 50%;
}
.usermotto {
	margin:10rpx;
}